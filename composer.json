{
    "name": "moccalotto/valit",
    "type": "library",
    "description": "validate method arguments, http requests and input-data at runtime using self-documenting code",
    "keywords": ["input", "validation", "verification", "data guard", "assertion"],
    "homepage": "https://moccalotto.github.io/docs/valit",
    "license": "MIT",
    "authors": [
        {
            "name": "Kim Ravn Hansen",
            "email": "moccalotto@gmail.com",
            "homepage": "https://moccalotto.github.io"
        }
    ],
    "require": {
        "php": ">=5.5.9|>=7.0.8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^1.11",
        "moccalotto/exemel": "^0.4.0",
        "phpspec/phpspec": "^2.0",
        "kahlan/kahlan": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Valit\\": "src/"
        }
    },
    "archive": {
        "exclude": ["/demo.php", "/spec", "/examples"]
    },
    "suggest": {
        "ext-xml": "Allows checking that string is valid XML",
        "moccalotto/exemel": "Needed to check if two XML documents are congruent"
    },
    "scripts": {
        "cs": [
            "@php vendor/bin/php-cs-fixer fix --config-file=.php_cs --dry-run src"
        ],
        "kahlan": [
            "@php vendor/bin/kahlan --config=.kahlan.php"
        ],
        "phpspec": [
            "@php vendor/bin/phpspec run --config=.phpspec.yml"
        ],
        "test": [
            "@phpspec",
            "@kahlan"
        ],
        "pipeline": [
            "@bdd",
            "@cs"
        ],
        "csfix": [
            "@php vendor/bin/php-cs-fixer fix --config-file=.php_cs"
        ]
    }
}
